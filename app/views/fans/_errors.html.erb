<% if @fan.errors.any? %>
<section id="errors">
  <header>
    <h2>
      Oops! The <%= @fan.class.name.humanize.downcase %> could not be saved.
    </h2>
    <h3>
      Please correct the following <%= pluralize(@fan.errors.count, "error") %>:
    </h3>
  </header>
  <ul>
    <% @fan.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
    <%= link_to "Return to Map", fans_path, class: 'button' %>
</section>
<% end %>
