<h1>Where Are the Fans of BeauSoleil??</h1>

<div id="google_map_image">
  <%= image_tag("world-map.png") %>
</div>

<div class="flex-grid">
  <div class="left col">
    <h3>Join here!</h3>
  </div>
  <div class="right col">
    <h3>What Fans Are Saying:</h3>
  </div>
</div>

<div class="flash_notice">
  <%= flash[:notice] %>
  <%= flash[:errors] %>
</div>

<div class="flex-wrap">
  <div class="flex-grid">

    <div class="fan_form col">
      <%= render "form" %>
    </div>
    <div class="fan_messages col">
      <div class="messages">
        <%= render 'message' %>
      </div>
    </div>
  </div>
</div>
